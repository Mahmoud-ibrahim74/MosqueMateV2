<Window x:Class="MosqueMateV2.Windows.AdhkarModalPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MosqueMateV2.Windows"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Width="600"
        Height="600"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow"
        ThemeMode="System"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <Storyboard x:Key="PopupAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="-200"
                             To="0"
                             Duration="0:0:0.4" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.4" />
        </Storyboard>

        <!-- Slide Out Animation -->
        <Storyboard x:Key="PopupSlideOut">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0"
                             To="-200"
                             Duration="0:0:0.4" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.4" />
        </Storyboard>
    </Window.Resources>
    <!-- Modal Content -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="77*"></RowDefinition>
            <RowDefinition Height="429*" />
            <RowDefinition Height="78*" />
        </Grid.RowDefinitions>

        <!--#region SVG-Waves -->
        <Path Fill="#FF6FA6E8"
              Stretch="Fill"
              Grid.Row="0"
              VerticalAlignment="Center"
              Height="77">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="0,50"
                                IsClosed="True">
                        <!-- Single Wave -->
                        <BezierSegment Point1="200,150"
                                       Point2="600,-50"
                                       Point3="800,50" />
                        <!-- Close the shape -->
                        <LineSegment Point="800,0" />
                        <LineSegment Point="0,0" />
                        <LineSegment Point="0,50" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>

        <Path Fill="#FF6FA6E8"
              Stretch="Fill"
              VerticalAlignment="Center"
              Grid.Row="2"
              Height="77">
            <Path.Data>
                <PathGeometry>
                    <PathFigure StartPoint="0,150"
                                IsClosed="True">
                        <!-- Single Wave -->
                        <BezierSegment Point1="200,50"
                                       Point2="600,250"
                                       Point3="800,150" />
                        <!-- Close the shape -->
                        <LineSegment Point="800,200" />
                        <LineSegment Point="0,200" />
                        <LineSegment Point="0,150" />
                    </PathFigure>
                </PathGeometry>
            </Path.Data>
        </Path>
        <!--#endregion-->

        <materialDesign:Card Margin="10,77,10,0"
                             Grid.RowSpan="2">
            <Grid>

                <Button Background="#6897a7"
                        BorderBrush="{x:Null}"
                        Margin="477,330,0,0"
                        Height="29"
                        Width="34"
                        VerticalAlignment="Top">
                    <materialDesign:PackIcon Kind="PlayCircleOutline"></materialDesign:PackIcon>
                </Button>


                <TextBlock Text="This is a Modal Popup!"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Top"
                           TextAlignment="Center"
                           FontSize="18"
                           Margin="0,5,0,0"
                           Height="27"
                           Width="506" />
            </Grid>
        </materialDesign:Card>

    </Grid>
</Window>
