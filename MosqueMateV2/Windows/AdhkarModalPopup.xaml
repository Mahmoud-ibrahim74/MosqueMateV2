<Window x:Class="MosqueMateV2.Windows.AdhkarModalPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Width="600"
        Height="700"
        Topmost="False"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        ThemeMode="System"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Window.Resources>
        <Storyboard x:Key="PopupAnimation">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="-200"
                             To="0"
                             Duration="0:0:0.4" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="0"
                             To="1"
                             Duration="0:0:0.4" />
        </Storyboard>

        <!-- Slide Out Animation -->
        <Storyboard x:Key="PopupSlideOut">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)"
                             From="0"
                             To="-200"
                             Duration="0:0:0.4" />
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                             From="1"
                             To="0"
                             Duration="0:0:0.4" />
        </Storyboard>
    </Window.Resources>
    <!-- Modal Content -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="247*"></RowDefinition>
            <RowDefinition Height="45*" />
        </Grid.RowDefinitions>

        <!--#region Wave-Images -->
        <Image Stretch="UniformToFill"
               Source="/Assets/wave1.png"
               Margin="0,23,0,-11"
               Grid.Row="1" />
        <!--#endregion-->

        <Grid Grid.Row="0">

            <Button x:Name="nextZekr"
                    Click="nextZekr_Click"
                    Background="#6897a7"
                    BorderBrush="{x:Null}"
                    Margin="535,470,0,0"
                    Height="29"
                    Width="34"
                    VerticalAlignment="Top">
                <materialDesign:PackIcon Kind="NavigateNext"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"></materialDesign:PackIcon>
            </Button>
            <Button x:Name="perviousZekr"
                    Background="#6897a7"
                    Click="perviousZekr_Click"
                    BorderBrush="{x:Null}"
                    Margin="15,473,0,0"
                    Height="29"
                    Width="34"
                    VerticalAlignment="Top">
                <materialDesign:PackIcon Kind="NavigateBefore"
                                         HorizontalAlignment="Center"
                                         VerticalAlignment="Center"></materialDesign:PackIcon>
            </Button>

            <!--#region Title-Area -->
            <TextBlock x:Name="zekrTitle"
                       Text=""
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       TextAlignment="Center"
                       FontSize="18"
                       Margin="0,43,0,0"
                       Height="27"
                       Width="408" />
            <Image Source="/Assets/islamic-pattern.png"
                   Margin="27,5,479,449" />
            <Image Source="/Assets/islamic-pattern.png"
                   Margin="477,11,31,457" />
            <!--#endregion-->

            <!--#region Devider -->
            <hc:Divider HorizontalAlignment="Left"
                        Margin="81,135,0,0"
                        VerticalAlignment="Top"
                        Height="3"
                        RenderTransformOrigin="0.5,0.5"
                        Width="419">
                <hc:Divider.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1" />
                        <SkewTransform />
                        <RotateTransform />
                        <TranslateTransform />
                    </TransformGroup>
                </hc:Divider.RenderTransform>
            </hc:Divider>

            <!--#endregion-->

            <!--#region Description -->
            <TextBlock x:Name="zekrDescription"
                       Text=""
                       TextWrapping="WrapWithOverflow"
                       LineHeight="40"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       TextAlignment="Center"
                       FontSize="18"
                       Cursor="Hand"
                       Padding="0 20 0 0"
                       Margin="0,166,0,0"
                       Height="261"
                       Width="548"
                       FlowDirection="RightToLeft"
                       MouseLeftButtonDown="zekrDescription_PreviewMouseLeftButtonDown" />
            <hc:CircleProgressBar x:Name="zekrCounter"
                                  Margin="240,444,230,0"
                                  VerticalAlignment="Top"
                                  ShowText="False"
                                  FontSize="15"
                                  ArcThickness="12"
                                  FontWeight="UltraBold"
                                  Height="98"
                                  Foreground="Orange">

            </hc:CircleProgressBar>
            <TextBlock x:Name="zekrCounterTxt"
                       Text="1"
                       FontSize="20"
                       TextAlignment="Center"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Width="38"
                       Height="24"
                       FontWeight="DemiBold"
                       Margin="279,478,0,0" />
            <!--#endregion-->



        </Grid>
    </Grid>
</Window>
