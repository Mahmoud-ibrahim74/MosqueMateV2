<Window  x:Name="ConfirmationDialog"
         x:Class="MosqueMateV2.Windows.TestWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
         xmlns:system="clr-namespace:System;assembly=System.Runtime"
         xmlns:local="clr-namespace:MosqueMateV2.CustomUserControls"
         xmlns:hc="https://handyorg.github.io/handycontrol"
         Title="Exit Confirmation Example"
         ThemeMode="Light"
         Height="600"
         Width="800"
         Loaded="ConfirmationDialog_Loaded">
    <Grid>
        <Grid HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <hc:LoadingLine HorizontalAlignment="Left"
                            Margin="656,35,0,0"
                            VerticalAlignment="Top" />

            <hc:Carousel HorizontalAlignment="Stretch"
                         Margin="0,135,0,145"
                         Width="800">
                <hc:Carousel.Items>
                    <Image Source="/Assets/Asr.jpg"
                           Stretch="Fill"
                           StretchDirection="DownOnly"
                           Width="387" />
                    <Image Source="/Assets/Asr.jpg"
                           Stretch="UniformToFill"
                           StretchDirection="DownOnly" />
                    <Image Source="/Assets/Asr.jpg"
                           Stretch="UniformToFill"
                           StretchDirection="DownOnly" />
                </hc:Carousel.Items>
            </hc:Carousel>

        </Grid>

        <Button x:Name="PowerButton"
                Margin="271,457,0,0"
                VerticalAlignment="Top"
                Height="42"
                Content="Open"
                Width="197"
                Click="PowerButton_Click" />
    </Grid>
</Window>
