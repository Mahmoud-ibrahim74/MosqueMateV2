<Window  x:Name="ConfirmationDialog"
         x:Class="MosqueMateV2.Windows.TestWindow"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
         Title="Exit Confirmation Example"
         Height="350"
         Width="525">
    <md:DialogHost x:Name="DialogHost"
                               DialogContent="{Binding ElementName=DialogContent, Path=Content}">
        <Grid>
            <Button Content="Open Dialog"
                    Command="{Binding OpenDialogCommand}"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center" />
        </Grid>
    </md:DialogHost>
</Window>
