<Window x:Class="MosqueMateV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xag="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif" 
        xmlns:local="clr-namespace:MosqueMateV2.CustomUserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="850"
        MinWidth="750" MinHeight="400" 
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded" ThemeMode="System">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="243*"/>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="10" 
                Margin="10,10,10,0" 
                BorderBrush="Azure" 
                BorderThickness="0.1"
                Grid.Row="0">
            <Grid>
                <Label x:Name="welcomeLBL" Content="....." Grid.Row="0" FontSize="12"  Padding="10 15 0 0" Margin="0,0,390,50"/>
                <Label x:Name="hijiriDateLBL" Content="....." Grid.Row="0" FontWeight="Bold" FontSize="15" Padding="10 2 0 0" Margin="0,44,390,6"/>
                <ToggleButton x:Name="toggleAdhan" Cursor="Hand" FontWeight="ExtraBold"  FontSize="15" HorizontalAlignment="Stretch" Margin="350,0,163,0" Click="toggleAdhan_Click" Height="60">....</ToggleButton>
                <Image x:Name="timeNow" Stretch="UniformToFill"  Width="40" Height="40" HorizontalAlignment="Right" Margin="0,15,16,25"></Image>
            </Grid>
        </Border>
        <Grid 
            x:Name="carouselContainer"
            Grid.Row="1" 
            Grid.RowSpan="2"
            Margin="10,10,10,0"                     
            >
            <Grid Grid.Row="1">
                <local:CarouselUserControl PrayerSlides="{Binding PrayerSlidesData}" 
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Stretch"/>
            </Grid>

        </Grid>
        <Image x:Name="Loader" 
               Visibility="Visible" 
               Panel.ZIndex="1" 
               Margin="281,121,319,78" 
               Grid.RowSpan="2"
               Grid.Row="1"/>
        <Grid Grid.Row="2" Margin="118,141,100,10" Grid.RowSpan="2" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"></ColumnDefinition>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100*"></RowDefinition>
                <RowDefinition Height="100*"/>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="60" Height="60" Margin="0,0,10,12">
                <Button.Background>
                    <ImageBrush ImageSource="/Assets/tasbih (1).png" Stretch="Uniform"/>
                </Button.Background>
            </Button>
            <Button Content="............" Grid.Column="1" Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60" Margin="0,0,10,12"/>
            <Button Content="............" Grid.Column="2" Grid.Row="0"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60" Margin="0,0,10,12"/>
            <Button Content="............" Grid.Column="0" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60" Margin="0,0,10,12"/>
            <Button Content="............" Grid.Column="1" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60" Margin="0,0,10,12"/>
            <Button Content="............" Grid.Column="2" Grid.Row="1"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Height="60" Margin="0,0,10,12"/>
        </Grid>
    </Grid>
</Window>
