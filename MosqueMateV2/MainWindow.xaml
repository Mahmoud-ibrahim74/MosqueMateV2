<Window x:Class="MosqueMateV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xag="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif" 
        xmlns:local="clr-namespace:MosqueMateV2.CustomUserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="850"
        MinWidth="750" MinHeight="450" 
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded" ThemeMode="System">

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="243*"/>
            <RowDefinition Height="141*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Border CornerRadius="10" 
                Margin="10,10,10,0" 
                BorderBrush="Azure" 
                BorderThickness="0.1"
                Grid.Row="0">
            <Grid>
                <Label x:Name="welcomeLBL" Content="....." Grid.Row="0" FontSize="12"  Padding="10 15 0 0" Margin="0,0,390,50"/>
                <Label x:Name="hijiriDateLBL" Content="....." Grid.Row="0" FontWeight="Bold" FontSize="15" Padding="10 2 0 0" Margin="0,44,390,6"/>
                <ToggleButton x:Name="toggleAdhan" Cursor="Hand" Visibility="Hidden" FontWeight="ExtraBold"  FontSize="15" HorizontalAlignment="Stretch" Margin="350,0,163,0" Click="toggleAdhan_Click" Height="60">....</ToggleButton>
                <Image x:Name="timeNow" Stretch="UniformToFill"  Width="40" Height="40" HorizontalAlignment="Right" Margin="0,15,16,25"></Image>
            </Grid>
        </Border>
        <Grid 
            x:Name="carouselContainer"
            Grid.Row="1" 
            Grid.RowSpan="2"
            Margin="10,10,10,0"                     
            >
            <Grid Grid.Row="1">
                <local:CarouselUserControl PrayerSlides="{Binding PrayerSlidesData}" 
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Stretch"/>
            </Grid>

        </Grid>
        <Image x:Name="Loader" 
               Visibility="Visible" 
               Panel.ZIndex="1" 
               Margin="281,121,319,78" 
               Grid.RowSpan="2"
               Grid.Row="1"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"></ColumnDefinition>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            <Button x:Name="QuranBtn" Grid.Column="0" Width="60" Height="60" Margin="107,2,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/quran.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="quranTxt" 
                                   Text="Quran" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="tasbihBtn" Grid.Column="2" Width="60" Height="60" Margin="107,2,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/zekr.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="tasbihTxt" 
                                   Text="Tasbih" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="hadithBtn" Grid.Column="0" Grid.Row="1" Width="60" Height="60" Margin="107,5,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/hadith.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="hadithTxt" 
                                   Text="Hadith" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Top" 
                                   FontSize="10" 
                                   TextAlignment="Center" Margin="0,77,0,0" Width="60"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="prayerLearningBtn" Grid.Column="1" Grid.Row="1" Width="120" Height="70" Margin="84,5,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle Margin="0,0,0,34">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/shalat.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="prayerLearningTxt" 
                                   Text="Prayer Learning" 
                                   VerticalAlignment="Top" 
                                   FontSize="10" 
                                   TextAlignment="Center" Margin="0,75,0,0"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Column="2" Grid.Row="1" Width="60" Height="60" Margin="106,-50,0,0" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/tasbih.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock 
                                   Text="Tasbih" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="azkarBtn" Grid.Column="1" Width="60" Height="60" Margin="107,2,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/tasbih.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="azkarTxt" 
                                   Text="Azkar" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
