<Window x:Class="MosqueMateV2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xag="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif" 
        xmlns:local="clr-namespace:MosqueMateV2.CustomUserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="750" Width="800"
        MinWidth="800" MinHeight="600" 
        WindowStartupLocation="CenterScreen" 
        Loaded="Window_Loaded" ThemeMode="System">
    <!-- Resources for Animations -->
    <Window.Resources>
        <!-- Slide-in Animation -->
        <Storyboard x:Key="SlideInAnimation">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                Duration="0:0:0.5"
                                From="-300,0,0,0" 
                                To="0,0,0,0" />
        </Storyboard>

        <!-- Slide-out Animation -->
        <Storyboard x:Key="SlideOutAnimation">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" 
                                Duration="0:0:0.5"
                                From="0,0,0,0" 
                                To="-300,0,0,0" />
        </Storyboard>
    </Window.Resources>

    <Grid x:Name="GridContainer" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.RowDefinitions>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="253*"/>
            <RowDefinition Height="151*"/>
            <RowDefinition Height="215*"/>
        </Grid.RowDefinitions>
        <!-- Sliding Panel -->
        <Border x:Name="SlidingPanel"
                Grid.RowSpan="4"
                Opacity="0.95"
                Width="300"
                Panel.ZIndex="1"
                HorizontalAlignment="Left"
                Margin="-300,0,0,0">
            <Border.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#134E5E"/>
                    <GradientStop Color="#71B380" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="95*"></RowDefinition>
                    <RowDefinition Height="365*"/>
                    <RowDefinition Height="274*"/>
                </Grid.RowDefinitions>
                <Image 
                           Grid.Row="0"
                           Panel.ZIndex="1"
                           HorizontalAlignment="Left"
                           Width="20"
                           Height="20"
                           Margin="228,2,0,73"
                           Source="/Assets/letter-v.png"
                           Stretch="UniformToFill"
                           >
                </Image>
                <Image 
                   Grid.Row="0"
                   Panel.ZIndex="1"
                   HorizontalAlignment="Left"
                   Width="13"
                   Height="13"
                   Margin="243,4,0,76"
                   Source="/Assets/two.png"
                   Stretch="UniformToFill"
                   >
                </Image>
                <TextBlock Text="Mosque Mate"
                           Grid.Row="0"
                           HorizontalAlignment="Center"
                           FontSize="25" 
                           Width="188"
                           Padding="5 10 00 0"
                           Margin="0,10,0,39"
                           FontWeight="UltraBold"
                           FontFamily="NativePrinterFontB"
                           >
                    <TextBlock.Effect>
                        <DropShadowEffect 
                                  ShadowDepth="2"
                                  Opacity="0.8"
                                  BlurRadius="10" />
                    </TextBlock.Effect>
                </TextBlock>
                <Image x:Name="logo" 
                       Stretch="UniformToFill"
                       Source="/Assets/pray.ico"
                        Width="40" Height="40" Margin="11,16,249,39" />
                <GridSplitter Margin="0,74,0,8" Width="250" Height="3" HorizontalAlignment="Center" Background="#FFF1E7E7"/>
                <Button 
                    Content="x" Click="CloseSlider_Click"
                    Margin="264,1,0,0" VerticalAlignment="Top" 
                    Width="39" 
                    Background="{x:Null}"
                    BorderBrush="{x:Null}" Height="29"
                    />
            </Grid>
        </Border>
        <Border CornerRadius="10" 
                Margin="10,10,10,0" 
                BorderBrush="Azure" 
                BorderThickness="0.1"
                Grid.Row="0">
            <Grid x:Name="topGrid">
                <Label x:Name="welcomeLBL" Content="....." Grid.Row="0" FontSize="12"  Padding="10 15 0 0" Margin="0,0,390,58"/>
                <Label x:Name="hijiriDateLBL" Content="....." Grid.Row="0" FontWeight="Bold" FontSize="15" Padding="10 2 0 0" Margin="0,39,494,33"/>
                <Label x:Name="miladiDateLBL" Content="....." Grid.Row="0" FontWeight="Bold" FontSize="15" Padding="10 2 0 0" Margin="0,69,494,3"/>
                <Label x:Name="nextPrayerLBL" Content="....." Grid.Row="0" FontWeight="Bold" FontSize="15" Padding="10 2 0 0" Margin="335,69,117,4"/>
                <ToggleButton
                    x:Name="toggleSidebar" 
                    Click="toggleSidebar_Click"
                    Grid.Row="0"
                    FontWeight="Bold"
                    FontSize="15" Margin="10" 
                    VerticalAlignment="Top"
                    Cursor="Hand"
                    Width="32"
                    HorizontalAlignment="Right"
                    Height="32"
                    BorderBrush="{x:Null}"
                    >
                    <ToggleButton.Background>
                        <ImageBrush ImageSource="/Assets/menu-bar.png"/>
                    </ToggleButton.Background>
                </ToggleButton>
            </Grid>
        </Border>
        <Grid 
            x:Name="carouselContainer"
            Grid.Row="1" 
            Grid.RowSpan="2"
            Margin="10,10,10,0"                     
            >
            <Grid x:Name="centerGrid" Grid.Row="1">
                <local:CarouselUserControl PrayerSlides="{Binding PrayerSlidesData}" 
                                       HorizontalAlignment="Stretch" 
                                       VerticalAlignment="Stretch"/>
            </Grid>

        </Grid>
        <Image x:Name="Loader" 
               Visibility="Visible" 
               Panel.ZIndex="1" 
               Margin="281,121,319,78" 
               Grid.RowSpan="2"
               Grid.Row="1"/>
        <Grid Grid.Row="2" Margin="0,151,0,0" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250*"></ColumnDefinition>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="250*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>


            <Button x:Name="QuranBtn" Grid.Column="0" Width="60" Height="60" Margin="107,2,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/quran.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="quranTxt" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   FontWeight="DemiBold"
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="tasbihBtn" Grid.Column="2" Width="60" Height="60" Margin="107,2,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/zekr.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="tasbihTxt" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   FontWeight="DemiBold"                                   
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="hadithBtn" Grid.Column="0" Grid.Row="1" Width="60" Height="60" Margin="107,5,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/hadith.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="hadithTxt" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Top" 
                                   FontWeight="DemiBold"                                 
                                   FontSize="10" 
                                   TextAlignment="Center" Margin="0,77,0,0" Width="60"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="prayerLearningBtn" Grid.Column="1" Grid.Row="1" Width="120" Height="70" Margin="84,5,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle Margin="0,0,0,34">
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/shalat.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="prayerLearningTxt" 
                                   VerticalAlignment="Top" 
                                   FontSize="10" 
                                   FontWeight="DemiBold"                           
                                   TextAlignment="Center" Margin="0,75,0,0"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button Grid.Column="2" Grid.Row="1" Width="60" Height="60" Margin="106,-50,0,0" Cursor="Hand" Click="Button_Click">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/tasbih.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   FontWeight="DemiBold"                          
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
            <Button x:Name="azkarBtn" Grid.Column="1" Width="60" Height="60" Margin="107,2,0,0" VerticalAlignment="Top" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid Margin="0,0,0,-30">
                            <!-- Background Image -->
                            <Rectangle>
                                <Rectangle.Fill>
                                    <ImageBrush ImageSource="/Assets/tasbih.png" Stretch="Uniform"/>
                                </Rectangle.Fill>
                            </Rectangle>
                            <!-- Label -->
                            <TextBlock x:Name="azkarTxt" 
                                   HorizontalAlignment="Center" 
                                   VerticalAlignment="Bottom" 
                                   FontSize="10" 
                                   FontWeight="DemiBold"                                   
                                   TextAlignment="Center"
                            />
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>
    </Grid>
</Window>
