<ui:Page xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         x:Class="MosqueMateV2.Pages.Hadith"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:local="clr-namespace:MosqueMateV2.CustomUserControls"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         xmlns:hc="https://handyorg.github.io/handycontrol"
         mc:Ignorable="d"
         Title="MainWindow"
         ui:ThemeManager.RequestedTheme="Default"
         Loaded="Window_Loaded">
    <Grid>
        <ScrollViewer x:Name="quranScrollViewer"
                      Grid.Row="1">
            <Grid x:Name="GridCardContainer"
                  Grid.RowSpan="2">
                <hc:LoadingCircle x:Name="loader"
                                  DotSpeed="5"
                                  DotCount="5"
                                  Width="101"
                                  Height="40"
                                  Panel.ZIndex="2"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Visibility="Collapsed" />
            </Grid>
        </ScrollViewer>
    </Grid>
</ui:Page>
