<ui:Page xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         x:Class="MosqueMateV2.Pages.Adhkar"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
         xmlns:xag="clr-namespace:XamlAnimatedGif;assembly=XamlAnimatedGif"
         xmlns:local="clr-namespace:MosqueMateV2.CustomUserControls"
         xmlns:ui="http://schemas.modernwpf.com/2019"
         mc:Ignorable="d"
         Title="MainWindow"
         ui:ThemeManager.RequestedTheme="Default"
         FontFamily="Bahnschrift Condensed"
         Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="25*" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <TextBox x:Name="AdhkarSearchTxt"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Center"
                     Width="450"
                     Height="40"
                     Padding="10"
                     FontSize="18"
                     FlowDirection="RightToLeft" />
            <Button x:Name="searchOnAdhan"
                    Width="50"
                    Height="40"
                    Padding="10"
                    FontSize="18"
                    Cursor="Hand"
                    HorizontalAlignment="Center"
                    Margin="-550,0,0,0"
                    Click="searchOnAdhan_Click">
                <materialDesign:PackIcon Kind="search"
                                         Height="15"
                                         Width="25"
                                         HorizontalAlignment="Center" />
            </Button>
        </Grid>
        <ScrollViewer x:Name="adhkarScrollViewer"
                      Grid.Row="1">
            <Grid x:Name="GridCardContainer"
                  ScrollViewer.VerticalScrollBarVisibility="Visible"
                  ScrollViewer.CanContentScroll="True"
                  ScrollViewer.HorizontalScrollBarVisibility="Visible"
                  Grid.RowSpan="2">
            </Grid>
        </ScrollViewer>
    </Grid>
</ui:Page>
